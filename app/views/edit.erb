<form action = "/recipes/<%=@recipe.id %>" method = "post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Recipe Name: <input id="name" type="text" name="<%=@recipe.name%>"></p>
  <p>Recipe Ingredients: <input id="content" type="text" name="<%=@recipe.ingredients%>"></p><br>
  <p>Cook Time: <input id="content" type="text" name="<%=@recipe.cook_time%>"></p><br>
  <input type="submit" value="submit">
</form>
